<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<StackPane  fx:id="stackPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vondrovic.ups.sp.client.controller.ConnectionController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
    <VBox fx:id="vbox" alignment="CENTER" prefHeight="317.0" prefWidth="272.0">
        <children>
            <Label text="Connection">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" top="20.0" />
                </VBox.margin>
            </Label>
            <Label text="Username">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </Label>
            <TextField fx:id="usernameInput">
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="5.0" />
                </VBox.margin>
            </TextField>
            <Label text="Server Address">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </Label>
            <TextField fx:id="addressInput" promptText="localhost">
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="5.0" />
                </VBox.margin>
            </TextField>
            <Label text="Service port" />
            <TextField fx:id="portInput" promptText="9123">
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="5.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connect" text="Connect">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Button>
        </children>
    </VBox>
    </children>
</StackPane>
